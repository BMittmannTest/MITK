<config>
  <!-- Zoom sensitivity -->
  <param name="zoomFactor" value="5"/>
  <!-- Zoom either by moving mouse leftright or updown -->
  <param name="zoomDirection" value="leftright"/>
  <!-- scrolling either by moving mouse leftright or updown -->
  <param name="scrollDirection" value="leftright"/>
  <!-- Sets how many pixel the mouse has to be moved for scrolling 1 slice-->
  <param name="pixelPerSlice" value="3"/>
  <!-- when scrolling restart at beginning of volume, when end is reached-->
  <param name="autoRepeat" value="true"/>
  <!-- react to an event, even tough is was already processed by a DataInteractor-->
  <param name="alwaysReact" value="true"/>
  <!-- Moving -->
   <input event_class="MousePressEvent" event_variant="StartMove">
    <attribute name="EventButton" value="RightMouseButton"/>
    <attribute name="Modifiers" value="shift"/>
  </input>
  <input event_class="MouseReleaseEvent" event_variant="EndMoving">
    <attribute name="EventButton" value="RightMouseButton"/>
    <attribute name="Modifiers" value="shift"/>
  </input>
  <input event_class="MouseMoveEvent" event_variant="Moving">
    <attribute name="ButtonState" value="RightMouseButton"/>
    <attribute name="Modifiers" value="shift"/>
  </input>
  <!-- Zooming -->
  <input event_class="MousePressEvent" event_variant="StartZoom">
    <attribute name="EventButton" value="RightMouseButton"/>
    <attribute name="Modifiers" value="ctrl"/>
  </input>
   <input event_class="MouseMoveEvent" event_variant="Zooming">
    <attribute name="ButtonState" value="RightMouseButton"/>
    <attribute name="Modifiers" value="ctrl"/>
  </input>
  <input event_class="MouseReleaseEvent" event_variant="EndZooming">
    <attribute name="EventButton" value="RightMouseButton"/>
    <attribute name="Modifiers" value="ctrl"/>
  </input>
  <!-- scrolling -->
  <input event_class="MousePressEvent" event_variant="StartScroll">
    <attribute name="EventButton" value="MiddleMouseButton"/>
  </input>
  <input event_class="MouseReleaseEvent" event_variant="EndScrolling">
    <attribute name="EventButton" value="MiddleMouseButton"/>
  </input>
  <input event_class="MouseMoveEvent" event_variant="Scrolling">
    <attribute name="ButtonState" value="MiddleMouseButton"/>
  </input>
   <!-- LevelWindow -->
  <input event_class="MousePressEvent" event_variant="StartAdjustLevelWindow">
    <attribute name="EventButton" value="RightMouseButton"/>
  </input>
  <input event_class="MouseReleaseEvent" event_variant="EndLevelWindow">
    <attribute name="EventButton" value="RightMouseButton"/>
  </input>
  <input event_class="MouseMoveEvent" event_variant="adjustlevelwindow">
    <attribute name="ButtonState" value="RightMouseButton"/>
  </input>
</config>
